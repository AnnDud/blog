<%= link_to 'Edit', edit_article_path(@article) %>
<%= link_to 'Back', articles_path %>

<p>

  <%= image_tag @article.image.url, height: '150px', width:'250px' %>
</p> 

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @article.text %>

</p>

<p>
  <strong>Author:</strong>
  <%= @article.user.try(:email) %>

</p>
<p>
  <strong>Likes: </strong>
  <%= @article.likes.count %>

</p>

    <% if @user_like.nil? %>
		<%= link_to 'LIKE', add_like_article_path(@article), method: :post %>


<h2>Comments</h2>
<%= render @article.comments.order(created_at: :desc) %>

<%= render 'comments/form' %>
<% end -%>