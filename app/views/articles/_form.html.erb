<p>
  <%= link_to 'Back', articles_path %>
</p>

<%= render 'errors', model: @article %>

<%= form_for @article, html: { multipart: true } do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>

  <div class='form-group'>
    <%= f.label :image %><br>
    <%= f.file_field :image, class: 'form-control' %>
  </div>
  <p>
    <%= f.submit %>
  </p>
<% end %>
